{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "description": "Group all GitHub Actions updates together",
      "matchManagers": ["github-actions"],
      "groupName": "github-actions"
    },
    {
      "description": "Group Cargo major updates together",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["major"],
      "groupName": "rust-major"
    },
    {
      "description": "Group Cargo minor updates together",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["minor"],
      "groupName": "rust-minor"
    },
    {
      "description": "Group Cargo patch updates together",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["patch"],
      "groupName": "rust-patch"
    },
    {
      "description": "Group npm major updates together",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"],
      "groupName": "node-major"
    },
    {
      "description": "Group npm minor updates together",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor"],
      "groupName": "node-minor"
    },
    {
      "description": "Group npm patch updates together",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["patch"],
      "groupName": "node-patch"
    }
  ]
}
